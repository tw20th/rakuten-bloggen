  },
  "devDependencies": {
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^6.x.x",
    "@typescript-eslint/parser": "^6.x.x",
    "eslint": "^8.x.x",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.29.0",
    "firebase-functions-test": "^3.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.x.x"
  },
