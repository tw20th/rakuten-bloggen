{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "secrets": [
        "OPENAI_API_KEY",
        "RAKUTEN_APP_ID",
        "RAKUTEN_AFFILIATE_ID",
        "REVALIDATE_ENDPOINT",
        "REVALIDATE_SECRET"
      ],
      "runtime": "nodejs20",
      "region": "asia-northeast1"
    }
  ]
}
